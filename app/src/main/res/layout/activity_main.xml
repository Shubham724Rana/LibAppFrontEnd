<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Central Library NITH"
        android:fontFamily="casual"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:id="@+id/card_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="252dp"
        app:cardBackgroundColor="#00B0FF"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:contentPadding="20dp">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@android:color/white"
            android:hint="User Name" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#00B0FF"
        app:cardCornerRadius="10dp"
        android:id="@+id/card_user_password"
        app:cardElevation="20dp"
        android:layout_below="@+id/card_user_name"
        app:contentPadding="20dp">

        <EditText
            android:id="@+id/user_password"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="textPassword"
            android:background="@android:color/white"
            android:hint="Password" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#F50057"
        app:cardCornerRadius="10dp"

        app:cardElevation="20dp"
        android:layout_below="@+id/card_user_password"
        app:contentPadding="20dp">
        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/submit"
            android:text="Submit"
            android:background="@android:color/white"/>
    </androidx.cardview.widget.CardView>



</RelativeLayout>